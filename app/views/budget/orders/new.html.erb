<% form_for(:budget, @order.budget, :url => { :action => "create", :id => @order.id}) do |f| %>
 <%= render :partial => 'form', :locals => {:f => f}%>
 <div id="row_submit">
   <%= f.submit "Guardar cambios", :onclick => "return (confirm('¿Desea almacenar los cambios?'));"%>
   <%= link_to 'Cancelar', budget_orders_path, :confirm => 'Al cancelar los cambios no serán guardados' %>
 </div>
<% end%>
