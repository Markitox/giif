<%= link_to 'Ver solicitud',  :action => 'show_pdf', :id => record.id%>

<% if record.order_status_id < 3%>
 | <%= link_to_remote "Cambiar divisa", :url => { :controller => '../currencies', :action => 'update', :id => record.id} %>
<% end%>

<% if record.order_status_id==2 then %>
<% if record.budget.nil?%>
  <%= link_to 'Agregar datos', :action => 'new', :id => record.id%>
<% else%>
  | <%= link_to 'Editar', :action => 'edit', :id => record.id%>
| <%= link_to_remote 'Aprobar',  :url => {:action => 'approve', :id => record.id}, :format => 'js', :loading => "$('order_"+ record.id.to_s + "_status').update(''); $('order_status_loader_indicator').show();", :complete => "$('order_status_loader_indicator').hide();" %>
<% end%>

  | <%= link_to_remote 'Rechazar',  :url => {:action => 'reject', :id => record.id}, :format => 'js', :loading => "$('order_"+ record.id.to_s + "_status').update(''); $('order_status_loader_indicator').show();", :complete => "$('order_status_loader_indicator').hide();" %>
<% end%>
