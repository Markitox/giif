<div class="fix" id="currency_data">
  <div ="row">
    <span class="fix-left">Divisa:</span>
    <span class="fix-right" ><%= session[:currency].name%></span>
  </div>
  <div ="row">
    <span class="fix-left">Tipo de cambio:</span>
    <span class="fix-right" ><%= session[:currency_order].value%></span>
  </div>
  <div ="row">
    <span class="fix-left">Fuente:</span>
    <span class="fix-right" ><%= session[:currency].url%></span>
  </div>
  <div ="row">
    <span class="fix-left"></span>
    <span class="fix-right" style="text-align: right; padding-right: 50px;"><%= link_to_remote "Cambiar divisa", :url => { :controller => 'currencies', :action => 'change_currency'} %></span>
  </div>
</div>
